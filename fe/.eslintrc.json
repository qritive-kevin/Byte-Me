{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["unused-imports"],
  "extends": [],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "rules": {
    "unused-imports/no-unused-imports": "warn",

    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],

    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off"
  }
}
